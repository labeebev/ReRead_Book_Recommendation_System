<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:text="Book"/>
        <TextView
            android:id="@+id/txttitle"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/txtvtitle"
            android:layout_height="wrap_content"
            android:text="title"
            android:fontFamily="@font/trebold"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/txtvauthor"
            android:layout_below="@+id/txttitle"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textSize="15sp"/>
            <TextView
                android:layout_below="@+id/txttitle"
                android:id="@+id/txtauthor"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="author"
                android:layout_toRightOf="@+id/txtvauthor"
                android:fontFamily="@font/trebold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtvuser"
                android:layout_below="@id/txtvauthor"
                android:text="User"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user"
                android:id="@+id/txtuser"
                android:layout_below="@id/txtauthor"
                android:layout_toRightOf="@id/txtvuser"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/trebold"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtvrev"
                android:layout_below="@id/txtvuser"
                android:text="Review"
                android:layout_marginLeft="15dp"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/txtrev"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtuser"
                android:layout_toRightOf="@id/txtvrev"
                android:text="Your review"
                android:layout_marginLeft="17dp"
                android:textSize="15sp"
                android:fontFamily="@font/trebold"
                android:layout_marginTop="2dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>