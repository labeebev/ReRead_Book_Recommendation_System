<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteReview"
    android:id="@+id/relativereview">



    <TextView
        android:id="@+id/txt_bookname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/book_name"
        android:padding="15dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/et_reviewbookname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="632dp"
        android:padding="15dp"
        android:maxLines="1"
        android:hint="Book Title"
        android:textSize="20sp"
        android:inputType="text" />

    <TextView
        android:id="@+id/txt_bookauthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_reviewbookname"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="569dp"
        android:padding="15dp"
        android:text="@string/book_author"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_reviewbookauthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="525dp"
        android:maxLines="1"
        android:hint="Book Author"
        android:padding="15dp"
        android:textSize="20sp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/txt_bookreveiw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_reviewbookauthor"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="468dp"
        android:padding="15dp"
        android:text="@string/book_review"
        android:textColor="@android:color/black"
        android:textSize="20sp" />



    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/reviewtext"
        android:layout_width="400dp"
        android:layout_height="288dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="173dp"
        android:hint="@string/review" />

    <Button
        android:id="@+id/savereviewbt"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button"
        android:text="@string/save"
        android:textSize="20sp" />


</RelativeLayout>