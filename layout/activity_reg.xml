<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reg">

    <EditText
        android:id="@+id/etextName"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_below="@id/textRegisterfrm"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/textfield"
        android:fontFamily="@font/hpreg"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textRegisterfrm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/hpbold"
        android:text="Register!"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/etextemail2"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_below="@id/etextName"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/textfield"
        android:fontFamily="@font/hpreg"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etextPhone"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_below="@id/etextemail2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/textfield"
        android:fontFamily="@font/hpreg"
        android:hint="@string/phone_number"
        android:maxLength="10"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/etextpassreg1"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_below="@id/etextPhone"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/textfield"
        android:fontFamily="@font/hpreg"
        android:hint="@string/pass"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etextpassreg2"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_below="@id/etextpassreg1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/textfield"
        android:fontFamily="@font/hpreg"
        android:hint="@string/pass2"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/regbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etextpassreg2"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:fontFamily="@font/trereg"
        android:text="@string/register"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imgBtnLoginBack1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="44dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_arrow_back_24" />
    <TextView
        android:id="@+id/textMemberq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/trereg"
        android:text="Already registered?"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/textlogin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/trebold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="180dp"
        android:text="@string/login2"
        android:textColor="@color/blue1"
        android:textSize="17sp"
        />

</RelativeLayout>