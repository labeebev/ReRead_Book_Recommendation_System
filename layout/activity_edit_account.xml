<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6f2f2"
    tools:context=".EditAccountActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/txt_enteremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/enter_email"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="10dp" />
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:text="@string/gmail"
            android:inputType="textEmailAddress"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/txt_enterpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/enter_password"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="10dp" />
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:text=""
            android:hint="*******"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/retxt_enterpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/re_enter_password"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="10dp" />
        <EditText
            android:id="@+id/reedit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:text=""
            android:hint="*******"
            android:inputType="textPassword"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:paddingStart="100dp"
        android:paddingLeft="100dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/bt_saveaccount"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button"
            android:padding="15dp"
            android:text="@string/save"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />
    </RelativeLayout>

</LinearLayout>